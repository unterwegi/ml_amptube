/////////////////////////////////////////////////////////////////////////////
// Main Dialog
LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_US
IDD_VIEW_AMPTUBE DIALOGEX 0, 0, 215, 120
STYLE DS_SETFONT | DS_CONTROL | WS_CHILD | WS_TABSTOP
	| WS_CLIPSIBLINGS | WS_CLIPCHILDREN
EXSTYLE WS_EX_CONTROLPARENT
FONT 8, "MS Shell Dlg", 400, 0, 0x1
BEGIN
	CONTROL "Search:", IDC_STATIC, "Static",
	WS_VISIBLE | SS_RIGHT,
	0, 2, 30, 11

	CONTROL "", IDC_SEARCH, "Edit",
	WS_VISIBLE | WS_TABSTOP | ES_AUTOHSCROLL,
	35, 1, 104, 11

	CONTROL "Clear Search", IDC_CLEAR, "Button",
	WS_VISIBLE | WS_TABSTOP | BS_OWNERDRAW,
	0, 1, 71, 11

	CONTROL "Add to Playlist", IDC_ADD_TO_PLAYLIST, "Button",
	WS_VISIBLE | WS_TABSTOP | BS_OWNERDRAW,
	1, 0, 90, 11

	CONTROL "<<", IDC_PREV_RESULTS, "Button",
	WS_VISIBLE | WS_TABSTOP | BS_OWNERDRAW,
	94, 0, 20, 11

	CONTROL ">>", IDC_NEXT_RESULTS, "Button",
	WS_VISIBLE | WS_TABSTOP | BS_OWNERDRAW,
	117, 0, 20, 11
END

/////////////////////////////////////////////////////////////////////////////
//Config Dialog
LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_US
IDD_CONFIG_AMPTUBE DIALOGEX 0, 0, 180, 104
STYLE DS_SETFONT | WS_POPUPWINDOW | WS_CAPTION | WS_CLIPCHILDREN | WS_VISIBLE
CAPTION "AmpTube Plugin Configuration"
FONT 8, "MS Shell Dlg", 400, 0, 0x1
BEGIN
	CONTROL "Cache Path:", IDC_STATIC, "Static",
		SS_LEFT,
		5, 5, 100, 11
	CONTROL "", IDC_CACHE_PATH, "Edit",
		WS_TABSTOP | WS_BORDER | ES_AUTOHSCROLL,
		5, 16, 150, 13
	CONTROL "...", IDC_BROWSE_PATH, "Button",
		WS_TABSTOP,
		155, 16, 20, 13
	CONTROL "Clear Cache", IDC_CLEAR_CACHE, "Button",
		WS_TABSTOP,
		5, 34, 60, 13
	CONTROL "Desired Download Quality:", IDC_STATIC + 1, "Static",
		SS_LEFT,
		5, 52, 100, 11
	CONTROL "", IDC_DESIRED_QUALITY, "Combobox",
		WS_TABSTOP | WS_BORDER | CBS_DROPDOWNLIST,
		5, 63, 100, 13
	CONTROL "OK", IDOK, "Button",
		WS_TABSTOP,
		70, 86, 50, 13
	CONTROL "Cancel", IDCANCEL, "Button",
		WS_TABSTOP,
		125, 86, 50, 13
END

